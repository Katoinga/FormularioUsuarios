@model FormularioUsuarios.Models.ViewModels.UsuarioVM;
@{
    ViewData["Title"] = "DetalleUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.Id == 0)
{
    <h1>Crear Usuario</h1>
}
else
{
    <h1>Editar Usuario</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="GuardarUsuario" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-2">
                <label asp-for="Nombres">Nombres*</label>
                <input asp-for="Nombres" class="form-control" type="text" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Apellidos">Apellidos*</label>
                <input asp-for="Apellidos" class="form-control" type="text" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="FechaNacimiento">Fecha de nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="NroDocumento">Nro de documento*</label>
                <input asp-for="NroDocumento" class="form-control" type="number" />
                <span asp-validation-for="NroDocumento" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Departamento">Departamento*</label>
                <input asp-for="Departamento" class="form-control" type="text" />
                <span asp-validation-for="Departamento" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Provincia">Provincia*</label>
                <input asp-for="Provincia" class="form-control" type="text" />
                <span asp-validation-for="Provincia" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Direccion">Dirección*</label>
                <input asp-for="Direccion" class="form-control" type="text" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>


            <div class="mb-2">
                @if (Model.Id == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Editar</button>
                }
                <a class="btn btn-danger btn-sm w-25" asp-action="Index" asp-controller="Home">Cancelar</a>
            </div>
        </form>
    </div>
</div>


